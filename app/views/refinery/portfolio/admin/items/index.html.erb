  $(document).ready(function(){
    var form = $('#new_item');
    var app = {};

    app._dropzoneSendingCallback = function(file, xhr, formData) {
      console.dir(formData)
      $.each(form.data('form-data'), function(k, v) {
        formData.append(k, v);
      });
    };

    app._dropzoneCompleteCallback = function(file, data) {
       // $('.process').submit();
